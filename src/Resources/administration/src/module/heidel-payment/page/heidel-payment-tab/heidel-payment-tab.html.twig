{% block heidel_payment_payment_details %}
    <div class="heidel-payment-detail">
        <div v-if="!isLoading">
            <template v-for="paymentResource in paymentResources">
                <heidel-payment-detail :paymentResource="paymentResource"></heidel-payment-detail>
                <heidel-payment-history :paymentResource="paymentResource"></heidel-payment-history>
                <heidel-payment-actions :paymentResource="paymentResource" @reload="reloadPaymentDetails"></heidel-payment-actions>
            </template>
        </div>

        <sw-loader v-if="isLoading"></sw-loader>
    </div>
{% endblock %}
