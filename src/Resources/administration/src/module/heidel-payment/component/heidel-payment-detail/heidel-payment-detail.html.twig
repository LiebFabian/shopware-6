{% block heidel_payment_detail %}
    <sw-card class="heidel-payment-detail" :title="$tc('heidel-payment.paymentDetails.detail.cardTitle')">
        <sw-container columns="1fr 1fr" gap="0 20px">
            <sw-container>
                <sw-description-list>
                    <dt>{{ $tc('heidel-payment.paymentDetails.detail.amountTotal') }}</dt>
                    <dd>{{ paymentResource.basket.amountTotal | currency(paymentResource.currency) }}</dd>

                    <dt>{{ $tc('heidel-payment.paymentDetails.detail.amountTotalVat') }}</dt>
                    <dd>{{ paymentResource.basket.amountTotalVat | currency(paymentResource.currency) }}</dd>

                    <dt>{{ $tc('heidel-payment.paymentDetails.detail.currency') }}</dt>
                    <dd>{{ paymentResource.currency }}</dd>
                </sw-description-list>
            </sw-container>

            <sw-container>
                <sw-description-list>
                    <dt>{{ $tc('heidel-payment.paymentDetails.detail.orderId') }}</dt>
                    <dd>{{ paymentResource.orderId }}</dd>

                    <dt>{{ $tc('heidel-payment.paymentDetails.detail.id') }}</dt>
                    <dd>{{ paymentResource.id }}</dd>

                    <dt>{{ $tc('heidel-payment.paymentDetails.detail.state') }}</dt>
                    <dd>{{ paymentResource.state.name }}</dd>
                </sw-description-list>
            </sw-container>
        </sw-container>

        <sw-container v-if="paymentResource.isGuaranteed" columns="1fr" justify="left">
            <sw-button-process :isLoading="isLoading" :processSuccess="isSuccessful" @click="ship">
                {{ $tc('heidel-payment.paymentDetails.actions.shipButton') }}
            </sw-button-process>
        </sw-container>
    </sw-card>
{% endblock %}
