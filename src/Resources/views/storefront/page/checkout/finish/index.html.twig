{% sw_extends '@Storefront/storefront/page/checkout/finish/index.html.twig' %}

{% block page_checkout_finish_details %}
    {{ parent() }}

    {% block page_checkout_finish_details_heidelpay_transfer_information %}
        {% for transaction in page.order.transactions %}
            {% if transaction.extensions.heidelpayTransferInfo %}
                {% sw_include '@Storefront/storefront/component/heidelpay/finish/transfer-information.html.twig' with {
                    'transferInformation': transaction.extensions.heidelpayTransferInfo
                } %}
            {% endif %}
        {% endfor %}
    {% endblock %}
{% endblock %}
