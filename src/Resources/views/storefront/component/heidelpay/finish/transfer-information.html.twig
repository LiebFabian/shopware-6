{# @var transferInformation \HeidelPayment\Components\Struct\TransferInformation\TransferInformation #}
{% block heidelpay_transfer_information %}
    <div class="heidelpay-card">
        <div class="card-body">
            <div class="card-title">
                {{ "HeidelPayment.transferInformation.title" | trans  }}
            </div>

            <h6>
                {{ "HeidelPayment.transferInformation.message"|trans({'%amount%': (transferInformation.amount|currency)})  }}
            </h6>

            <table class="table table-sm table-bordered">
                <tr>
                    <td class="font-weight-bold">{{ "HeidelPayment.transferInformation.iban" | trans  }}</td>
                    <td>{{ transferInformation.iban }}</td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ "HeidelPayment.transferInformation.bic" | trans  }}</td>
                    <td>{{ transferInformation.bic }}</td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ "HeidelPayment.transferInformation.holder" | trans  }}</td>
                    <td>{{ transferInformation.holder }}</td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ "HeidelPayment.transferInformation.descriptor" | trans  }}</td>
                    <td>{{ transferInformation.descriptor }}</td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ "HeidelPayment.transferInformation.amount" | trans  }}</td>
                    <td>{{ transferInformation.amount|currency }}</td>
                </tr>
            </table>
        </div>
    </div>
{% endblock %}
