{# @var device \HeidelPayment6\DataAbstractionLayer\Entity\PaymentDevice\HeidelpayPaymentDeviceEntity #}

{% block page_account_payment_main_heidelpay_direct_debit_guaranteed %}
    <div class="heidelpay-device sepa-direct-debit-card">
        {% block page_account_payment_main_heidelpay_device_title %}
            <div class="card-title">
                {{ "HeidelPayment.accountPayment.directDebit" | trans  }}
            </div>
        {% endblock %}

        {% block page_account_payment_main_heidelpay_direct_debit_guaranteed_number %}
            <div id="number">
                <strong>{{ device.data.iban }}</strong>
            </div>
        {% endblock %}

        {% block page_account_payment_main_heidelpay_device_actions %}
            <div class="heidelpay-device-actions">
                <a class="btn btn-light btn-sm" href="{{ path('heidelpay.device.delete', {
                    'id': device.id
                }) }}">
                    {{ "HeidelPayment.accountPayment.delete" | trans  }}
                </a>
            </div>
        {% endblock %}
    </div>
{% endblock %}
