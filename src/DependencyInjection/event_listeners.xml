<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="HeidelPayment\EventListeners\Checkout\FinishPageEventListener">
            <argument type="service" id="HeidelPayment\Components\ClientFactory\ClientFactory"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="HeidelPayment\EventListeners\Checkout\ConfirmPageEventListener">
            <argument type="service" id="HeidelPayment\DataAbstractionLayer\Repository\PaymentDevice\HeidelpayPaymentDeviceRepository"/>
            <argument type="service" id="HeidelPayment\Components\ConfigReader\ConfigReader"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="HeidelPayment\EventListeners\Account\PaymentMethodPageEventListener">
            <argument type="service" id="HeidelPayment\Components\ConfigReader\ConfigReader"/>
            <argument type="service" id="HeidelPayment\DataAbstractionLayer\Repository\PaymentDevice\HeidelpayPaymentDeviceRepository"/>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
