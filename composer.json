{
    "name": "heidel/payment",
    "description": "Heidelpay payment integration for Shopware 6",
    "version": "v1.0.0",
    "type": "shopware-platform-plugin",
    "license": "Commercial",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "heidelpay GmbH",
            "email": "info@heidelpay.com",
            "homepage": "https://www.heidelpay.com"
        },
        {
            "name": "Kellerkinder GmbH",
            "email": "hallo@kellerkinder.de",
            "homepage": "https://www.kellerkinder.de/",
            "role": "Contributor"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "heidelpay/heidelpay-php": "dev-master"
    },
    "require-dev": {
        "k10r/codestyle": "^1.0",
        "phpstan/phpstan": "^0.11",
        "shopware/core": "*",
        "shopware/administration": "*",
        "shopware/storefront": "*"
    },
    "extra": {
        "shopware-plugin-class": "HeidelPayment\\HeidelPayment",
        "plugin-icon": "src/Resources/public/plugin.png",
        "copyright": "(c) heidelpay GmbH",
        "label": {
            "de-DE": "Heidelpay",
            "en-GB": "Heidelpay"
        },
        "description": {
            "de-DE": "Heidelpay Zahlungsarten f√ºr Shopware 6",
            "en-GB": "Heidelpay payment integration for Shopware 6 "
        },
        "manufacturerLink": {
            "de-DE": "https://www.heidelpay.com/de/",
            "en-GB": "https://www.heidelpay.com/en/"
        },
        "supportLink": {
            "de-DE": "https://www.heidelpay.com/de/",
            "en-GB": "https://www.heidelpay.com/en/"
        }
    },
    "autoload": {
        "psr-4": {
            "HeidelPayment\\": "src/"
        }
    },
    "suggest": {
        "shopware/core": "Require '*'. Base for all payment processes",
        "shopware/storefront": "Require '*'. Enables payment further payment features on checkout pages",
        "shopware/administration": "Require '*'. Enables payment administrations for orders placed with heidelpay and easy configuration"
    },
    "conflict": {
        "shopware/storefront": "<6,>=7",
        "shopware/administration": "<6,>=7"
    }
}
